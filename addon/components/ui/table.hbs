<YetiTable @data={{@data}} @loadData={{@onLoad}} @pagination={{if @pagination @pagination true}} @pageSize={{if @pageSize @pageSize 15}} ...attributes as |table|>
	{{#if table.isLoading}}
		<Ui::Spinner @centered={{true}} />
	{{else}}
	{{/if}}
	{{yield table}}
	<table.tfoot as |foot|>
		<foot.row as |row|>
			<row.cell @visible={{true}} colspan={{table.columns.length}}>
				<table.pagination />
			</row.cell>
		</foot.row>
	</table.tfoot>
</YetiTable>
