<YetiTable @data={{@data}} @pagination={{if @pagination @pagination true}} @pageSize={{if @pageSize @pageSize 25}} ...attributes as |table|>
	{{yield table}}
	<table.tfoot as |foot|>
		<foot.row as |row|>
			<row.cell @visible={{true}} colspan={{table.visibleColumns.length}}>
				<table.pagination />
			</row.cell>
		</foot.row>
	</table.tfoot>
</YetiTable>
