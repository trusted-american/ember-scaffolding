<div class="accordion-item" ...attributes>
	<h2 class="accordion-header">
		<button class="accordion-button {{if (not-eq @index 0) "collapsed"}}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{@index}}">
			{{@heading}}
		</button>
	</h2>
	<div id="collapse{{@index}}" class="accordion-collapse collapse {{if (eq @index 0) "show"}}" data-bs-parent="#accordion">
		<div class="accordion-body">
			{{yield}}
		</div>
	</div>
</div>
