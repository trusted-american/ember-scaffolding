<div class="d-flex justify-content-center text-secondary" ...attributes>
	<div class="text-center" style="max-width:350px;">
		<h1><FaIcon @icon={{@icon}} /></h1>
		<h5 class="mb-0">{{@title}}</h5>
		{{#if @subtitle}}
			<p class="mt-2 mb-0">{{@subtitle}}</p>
		{{/if}}
		{{#if @onClick}}
			<Ui::Button @size="sm" class="mt-3" @onClick={{@onClick}}>
				<FaIcon @icon="plus" />&nbsp; New
			</Ui::Button>
		{{/if}}
	</div>
</div>
