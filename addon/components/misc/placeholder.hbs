<div class="d-flex justify-content-center text-muted" ...attributes>
	<div class="text-center" style="max-width:350px;">
		<h1><FaIcon @icon={{@icon}} /></h1>
		<h5 class="font-weight-normal">{{@title}}</h5>
		{{#if @subtitle}}
			<p>{{@subtitle}}</p>
		{{/if}}
		{{#if @onClick}}
			<Ui::Button @size="sm" @onClick={{@onClick}}>
				<FaIcon @icon="plus" />&nbsp; New
			</Ui::Button>
		{{/if}}
	</div>
</div>
